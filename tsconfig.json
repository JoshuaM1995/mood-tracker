{
  "compilerOptions": {
    "declaration": true,
    "sourceMap": true,
    "composite": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "lib": ["esnext"],
    "target": "es2017",
    "strict": true,
    "resolveJsonModule": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "preserveConstEnums": true,
    "esModuleInterop": true,
    "jsx": "preserve"
  }
}
